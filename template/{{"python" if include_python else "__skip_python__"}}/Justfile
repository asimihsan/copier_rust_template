build:
    uv venv
    uv sync
    uv run maturin develop --uv

test: build
    uv run pytest tests

lint:
    uv run ruff check .
    uv run ruff format --check .
    uv run basedright

lint-fix:
    uv run ruff check . --fix
    uv run ruff format .

clean:
    rm -rf .venv target dist *.egg-info
    find . -type d -name "__pycache__" -exec rm -rf {} +
